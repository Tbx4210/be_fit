<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="befit.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label Text="Welcome to Befit"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="DarkGreen" />

                <Button Text="User Detail"
                Clicked="OnUserDetailClicked"
                BackgroundColor="#9C27B0"
                TextColor="White" />

                <Button Text="Add Exercise"
                Clicked="OnAddExerciseClicked"
                BackgroundColor="#4CAF50"
                TextColor="White" />

                <Button Text="Workout History"
                Clicked="OnWorkoutHistoryClicked"
                BackgroundColor="#2196F3"
                TextColor="White" />

                <Button Text="Diet Plan"
                Clicked="OnDietPlanClicked"
                BackgroundColor="#FF9800"
                TextColor="White" />
            </VerticalStackLayout>
    </ScrollView>

</ContentPage>
