<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="befit.View.WorkoutHistory"
             Title="WorkoutHistory">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Exercise Name" />
            <Entry Placeholder="Enter exercise name" />

            <Label Text="Sets" />
            <Entry Placeholder="e.g. 3" Keyboard="Numeric" />

            <Label Text="Reps" />
            <Entry Placeholder="e.g. 12" Keyboard="Numeric" />

            <Label Text="Date" />
            <DatePicker />

            <Label Text="Calories Burned" />
            <Entry Placeholder="e.g. 250" Keyboard="Numeric" />

            <Button Text="Save Workout" BackgroundColor="#2196F3" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>